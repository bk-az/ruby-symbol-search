{
  "name": "ruby-symbol-search",
  "displayName": "Ruby Symbol Search",
  "description": "Effortlessly explore and pinpoint Ruby symbols in your codebase with lightning-fast precision.",
  "version": "0.0.1",
  "publisher": "bkaz",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:**/*.rb"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rubySymbolSearch.index",
        "title": "Index Ruby Files"
      },
      {
        "command": "rubySymbolSearch.search",
        "title": "Search Ruby Symbols"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Ruby Symbol Search",
      "properties": {
        "rubySymbolSearch.excludedFolders": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Folders to exclude from Ruby symbol indexing."
        },
        "rubySymbolSearch.autoIndex": {
          "type": "boolean",
          "default": true,
          "description": "Automatically index Ruby files when they are created or modified."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.16.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "flexsearch": "^0.7.43",
    "minimatch": "^10.0.1"
  }
}
